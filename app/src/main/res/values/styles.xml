<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
        <item name="colorPrimary">@color/sinar_surya_color_2</item>
        <item name="colorAccent">@color/sinar_surya_color_2</item>
        <item name="android:colorPrimaryDark">@color/sinar_surya_color_1</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="titleTextColor">@color/black</item>
        <item name="searchViewStyle">@style/Widget.AppCompat.Light.SearchView</item>
        <item name="textAppearanceButton">@style/TextAppearance.App.Button</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="actionBarStyle">@style/Custom.ActionBar</item>

    </style>

    <style name="Custom.ActionBar" parent="Widget.MaterialComponents.Light.ActionBar.Solid">
        <item name="background">@color/white</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/red</item>
        <item name="titleTextStyle">@style/MyActionBarTitle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black_smooth</item>
    </style>

    <style name="StyleToolbar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/white</item>
        <item name="titleTextColor">@color/black</item>
        <!-- ... item lainnya ... -->
    </style>

    <dimen name="global_margin">15dp</dimen>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/lato_thin</item>
        <item name="android:fontFamily">@font/lato_thin</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="StyleLogin" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <!--FONT-->
    <style name="style_font">
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="SmallText" parent="style_font">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MediumText" parent="style_font">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MediumTextGray" parent="style_font">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="MediumTextBlue" parent="style_font">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blue_font</item>
    </style>

    <style name="LargeText" parent="style_font">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SmallTextBold" parent="style_font">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MediumTextBold" parent="style_font">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LargeTextBold" parent="style_font">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HeaderText" parent="style_font">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FilterText" parent="style_font">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/sinar_surya_color_3</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="StyleTextEditGeneral" parent="MediumText">
        <item name="android:layout_marginTop">-8dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:paddingTop">35dp</item>
    </style>


    <style name="styleSpinner" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
